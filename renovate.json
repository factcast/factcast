{
  "extends": [
    "config:base",
    ":rebaseStalePrs",
    ":automergeMinor",
    ":label(ready)"
  ],
  "stabilityDays": 1,
  "prCreation": "immediate",
  "packageRules": [
    {
      "packagePatterns": ["^org\.factcast"],
      "allowedVersions": "/^[0-9]+\\.[0-9]+\\.[0-9]+(\\.[0-9]+)?$/"
    },
    {
      "updateTypes": ["major"],
      "masterIssueApproval": true
    },{
      "languages": ["js"],
      "enabled": false,
      "recreateClosed": false
    }
  ],
  "labels": ["dependencies"]
}
