{
  "extends": [
    "config:base",
    ":rebaseStalePrs",
    ":automergeMinor",
    ":label(ready)"
  ],
  "stabilityDays": 1,
  "prCreation": "immediate",
  "ignorePaths": ["factcast-itests/factcast-itests-exception-handling-v3-compat"],
  "packageRules": [
    {
      "packagePatterns": [
        "^org\\.factcast"
      ],
      "allowedVersions": "/^[0-9]+\\.[0-9]+\\.[0-9]+(\\.[0-9]+)?$/"
    },
    {
      "updateTypes": [
        "major"
      ],
      "masterIssueApproval": true
    },
    {
      "languages": [
        "js"
      ],
      "enabled": false,
      "recreateClosed": false
    },
    {
      "matchUpdateTypes": ["minor", "patch", "pin", "digest"],
      "automerge": true
    },
    {
      "matchDepTypes": ["devDependencies"],
      "automerge": true
    }
  ],
  "labels": [
    "dependencies"
  ]
}
