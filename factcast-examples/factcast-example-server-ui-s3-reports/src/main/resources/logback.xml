<?xml version="1.0" encoding="UTF-8"?>
<configuration>
  <appender name="STDOUT"
    class="ch.qos.logback.core.ConsoleAppender">
    <encoder>
      <pattern>
        %magenta(%d{HH:mm:ss.SSS}) %highlight(%-5level) %yellow(%logger{36}) [%blue(%t)] -
        %msg%n%throwable
      </pattern>
    </encoder>
  </appender>
  <logger name="org.testcontainers" level="warn">
    <appender-ref ref="STDOUT" />
  </logger>
  <logger name="org.factcast-server-ui" level="debug">
    <appender-ref ref="STDOUT" />
  </logger>
  <logger name="org.factcast-server-ui-s3-reportstore"
    level="debug">
    <appender-ref ref="STDOUT" />
  </logger>
  <logger name="software.amazon.awssdk.services" level="debug">
    <appender-ref ref="STDOUT" />
  </logger>
  <root level="warn">
    <appender-ref ref="STDOUT" />
  </root>
</configuration>
